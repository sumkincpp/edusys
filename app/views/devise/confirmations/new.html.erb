<h2>Прислать письмо с подтверждением регистрации</h2>
<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :class => 'form-horizontal', :method => :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Прислать еще раз" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
