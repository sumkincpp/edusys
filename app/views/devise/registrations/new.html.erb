<div id="request-invite" class="modal" style="display: <%= @user.errors.any? ? 'block' : 'none';%>">
  <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name) , :html => {:class => 'form-horizontal' } do |f| %>
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3><%= registration_text %></h3>
    </div>
    <div class="modal-body">
      <%= f.error_notification %>
      <%= f.input :email, :placeholder => 'user@example.com' %>
    </div>
    <div class="modal-footer">
      <%= f.submit registration_text, :class => "btn btn.btn-success", :id => 'invitation_button' %>
      <a class="btn" data-dismiss="modal" href="#"><%= t(:close) %></a>
    </div>
  <% end %>
</div>

<% if not request.xhr? %>
<div id="romance-copy" style="">
  <%= render 'change_world_projects/rules' %>

  <div id="call-to-action" style="text-align: center; margin-top: 40px">
    <a class="btn btn-primary btn-large" data-toggle="modal" href="#request-invite"><%= registration_text %></a>
  </div>
</div>
<% end %>